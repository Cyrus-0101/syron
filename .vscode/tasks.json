{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/src/syron.sln"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "sc",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/sc/sc.csproj",
        "--",
        "${workspaceFolder}/samples"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": {
        "fileLocation": "absolute",
        "pattern": [
          {
            "regexp": "^(.*)\\((\\d,\\d\\,\\d\\,\\d\\))\\: (.*)$",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ]
      }
    }
  ]
}
